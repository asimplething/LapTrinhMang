// Network Analyzer Flowchart
digraph {
	rankdir=TB
	node [fontname=Arial]
	edge [fontname=Arial]
	start [label="Bắt đầu" shape=oval]
	run_analyzer [label="Chạy chương trình Network Analyzer" shape=box]
	capture_pcap [label="Gọi tệp Python để bắt lưu lượng mạng
và lưu thành PCAPNG" shape=box]
	run_ai_agents [label="Chạy song song 3 AI Agents
(Gemini, Grok, DeepSeek)" shape=box]
	compare_results [label="So sánh kết quả từ 3 AI Agents" shape=diamond]
	select_majority [label="Chọn kết quả có ít nhất
2/3 đồng thuận" shape=box]
	select_weighted [label="Chọn kết quả từ AI Agent
có trọng số lớn nhất" shape=box]
	output_result [label="In kết quả cuối cùng" shape=box]
	loop_back [label="Quay lại chạy Network Analyzer" shape=box]
	start -> run_analyzer
	run_analyzer -> capture_pcap
	capture_pcap -> run_ai_agents
	run_ai_agents -> compare_results
	compare_results -> select_majority [label="Nếu có ít nhất
2/3 đồng thuận"]
	compare_results -> select_weighted [label="Nếu cả 3 khác nhau"]
	select_majority -> output_result
	select_weighted -> output_result
	output_result -> loop_back
	loop_back -> run_analyzer
}
